<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/PriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/tw_cen"
        android:text="Price"
        android:textColor="@color/darkRed"
        app:layout_constraintBottom_toBottomOf="@id/MenuBackgroundButton"
        app:layout_constraintStart_toStartOf="@id/MenuBackgroundButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ShortDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/tw_cen"
        android:text="ShortD"
        android:textColor="@color/darkRedFaded"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/MenuBackgroundButton"
        app:layout_constraintStart_toStartOf="@+id/NameTextView"
        app:layout_constraintTop_toTopOf="@+id/MenuBackgroundButton"
        app:layout_constraintVertical_bias="0.65999997" />

    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/PriceTextView"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/tw_cen"
        android:text="Name"
        android:textColor="@color/darkRed"
        app:layout_constraintStart_toEndOf="@+id/PriceTextView"
        app:layout_constraintTop_toTopOf="@+id/PriceTextView" />

    <LinearLayout
        android:id="@+id/MenuExpandLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MenuBackgroundButton">

    </LinearLayout>


    <ImageButton
        android:id="@+id/MenuBackgroundButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
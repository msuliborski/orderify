<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/PriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tw_cen"
        android:text="Price"
        android:textColor="@color/darkRed"
        app:layout_constraintBottom_toBottomOf="@id/MenuBackgroundButton"
        app:layout_constraintStart_toStartOf="@id/MenuBackgroundButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/PriceTextView"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/tw_cen"
        android:text="Name"
        android:textColor="@color/darkRed"
        app:layout_constraintStart_toEndOf="@+id/PriceTextView"
        app:layout_constraintTop_toTopOf="@+id/PriceTextView" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/MenuExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/MenuBackgroundButton">

        <ImageView
            android:id="@+id/AddButton"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AddonCategoriesGridLayout"
            app:srcCompat="@drawable/add_button_background" />

        <TextView
            android:id="@+id/AddButtonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/tw_cen"
            android:gravity="center"
            android:text="@string/add_to_order_textview_string"
            android:textColor="@color/backgroundPrimary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/AddButton"
            app:layout_constraintEnd_toEndOf="@+id/AddButton"
            app:layout_constraintStart_toStartOf="@+id/AddButton"
            app:layout_constraintTop_toTopOf="@+id/AddButton" />

        <android.support.v7.widget.GridLayout
            android:id="@+id/AddonCategoriesGridLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:columnCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </android.support.v7.widget.GridLayout>

    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/MenuBackgroundButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Button"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/MenuExpand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>